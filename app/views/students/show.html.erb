<body class="pagina">
<p style="color: green"><%= notice %></p>

<b><p class="info">Informações</p></b>
<%= render @student %>

<div class="botoes">
  <div class="botao-1">
    <%= link_to "Editar dados", edit_student_path(@student) %> 
  </div>

  <%= button_to "Apagar aluno", @student, method: :delete, class: "botao-apagar"  %>

  <div class="botao-2 espaco-vertical">
  <%= link_to "Ver lista de alunos", students_path %>
